---
import 'atropos/css'
import { ViewTransitions } from 'astro:transitions'
interface Props {
  title: string
  class?: string
}

const { title, class: htmlClass } = Astro.props
---

<!doctype html>
<html class={htmlClass} lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <!-- <ViewTransitions fallback='none' /> -->
  </head>
  <body>
    <slot />
    <style is:global>
      html,
      body {
        margin: 0;
        padding: 0;
        font-family:
          Montserrat,
          Cinzel,
          Manrope,
          Comfortaa,
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          'Segoe UI',
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          'Open Sans',
          'Helvetica Neue',
          sans-serif;
        font-size: 16px;
        line-height: 1.5;
      }
      @font-face {
        font-family: 'Montserrat';
        src: url('/fonts/Montserrat-VariableFont_wght.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }

      @font-face {
        font-family: 'Agbalumo';
        src: url('/fonts/Agbalumo-Regular.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }

      @font-face {
        font-family: 'Amatic';
        src: url('/fonts/AmaticSC-Regular.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }

      @font-face {
        font-family: 'Cinzel';
        src: url('/fonts/Cinzel-VariableFont_wght.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }

      @font-face {
        font-family: 'Comfortaa';
        src: url('/fonts/Comfortaa-VariableFont_wght.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }

      @font-face {
        font-family: 'Inconsolata';
        src: url('/fonts/Inconsolata-VariableFont_wdth,wght.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }

      @font-face {
        font-family: 'Indie Flower';
        src: url('/fonts/IndieFlower-Regular.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }
      @font-face {
        font-family: 'Lumanosimo';
        src: url('/fonts/Lumanosimo-Regular.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }
      @font-face {
        font-family: 'Manrope';
        src: url('/fonts/Manrope-VariableFont_wght.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }
      @font-face {
        font-family: 'Merriweather';
        src: url('/fonts/Merriweather-Regular.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }
      @font-face {
        font-family: 'Rubik Mono One';
        src: url('/fonts/RubikMonoOne-Regular.ttf') format('truetype');
        font-style: normal;
        font-weight: 400;
        font-display: swap;
      }
    </style>
  </body>
</html>
