---
const links = [
  { href: '/', label: 'Home' },
  { href: '/#projects', label: 'Projects' },
  { href: '/#about', label: 'About' }
]
---

<nav class='flex justify-center items-center sticky top-0 w-full navbar z-50'>
  <ul class='flex gap-4'>
    {
      links.map(element => (
        <li>
          <a
            href={element.href}
            class="px-4 py-2 text-md text-primary border-2 border-primary hover:text-primary-foreground hover:bg-primary transition-colors duration-300 ease-in-out rounded-full shadow-lg shadow-primary-opacity-30"
            >
            {element.label}
          </Link>
        </Link>
      ))
    }
  </ul>
</nav>

<style>

  @keyframes navbar {
    from {
      height: 15svh;
    }
    to {
      height: 8vh;
      backdrop-filter: blur(5px) saturate(1.2) brightness(0.5);
    }
  }

  .navbar {
    backdrop-filter: blur(10px);
    height: 15svh;
    view-timeline-name: --navbar;
    view-timeline-axis: block;
    animation-timeline: --navbar;
    animation-name: navbar;
    animation-fill-mode: both;

    animation-range-start: 100vh;
    animation-range-end: 110vh;
  }
</style>