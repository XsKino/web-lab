---
interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<div class={`relative grid place-items-center select-none animate-appearance-in ${className}`}>
  <img src='/img/home/flask.png' class='absolute h-1/3 max-h-[50vmin] w-auto blur animate-pulse' />
  <img src='/img/home/flask.png' class='absolute h-1/3 max-h-[50vmin] w-auto' />
  <section
    class='relative h-1/2 max-h-[80vmin] w-full grid place-items-center animate-spinner-linear-spin [animation-duration:15s]'>
    <img src='/img/home/brackets.png' class='h-full w-auto absolute blur animate-pulse' />
    <img src='/img/home/brackets.png' class='h-full w-auto absolute' />
  </section>
</div>
